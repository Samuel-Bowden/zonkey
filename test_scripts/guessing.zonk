start {
	let page = Page();

	page.add(Text("Password Guessing Game").set_size(75.));

	let password = Input("Guess the password");
	page.add(password);

	let text = Text("No password entered yet");
	page.add(text);

	loop {
		let exit = wait_for_event();

		if (password.confirmed()) {
			if (password.get_text() == "password1234") {
				text
					.set_value("You guessed the correct password!")
					.set_colour(0., 1., 0.);
			} else {
				text
					.set_value("That wasn't the right password")
					.set_colour(1., 0., 0.);
			}
		}

		if (exit) { break; }
	}
}
