class Person {
	Integer age;
	String name;

	constructor(String name, Integer age) {
		@name = name;
		@age = age;
	}
	
	method advance_years(Integer years) -> Person {
		@age += years;
		return self;
	}

	method print() -> Person {
		println("Name: " + @name + ", Age: " + (String @age));
		return self;
	}

	method advance_year() -> Person {
		println("Advancing age by a year");
		return self.advance_years(1);
	}
}

start {
	let name = prompt("Enter your name:");
	let age = Integer prompt("Enter your age:");
	let person = Person(name, age).advance_year().print();

	loop {
		let years = Integer prompt("Enter years to advance age further by (0 to exit):");

		person.advance_years(years).print();

		if (years == 0) {
			break;
		}
	}
}
